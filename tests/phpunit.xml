<?xml version="1.0" encoding="UTF-8"?>
<phpunit
         backupGlobals="false"
         colors="true"
         mapTestClassNameToCoveredClassName="true"
        >
    <filter>
        <whitelist>
            <directory suffix=".php">../library/Girc</directory>
        </whitelist>
    </filter>
    <testsuite name="Sandbox Test Suite">
       <directory>./</directory>
   </testsuite>
   <logging>
       <log type="coverage-html" target="rep" charset="UTF-8"
            highlight="false" lowUpperBound="35" highLowerBound="70"/>
   </logging>
</phpunit>
